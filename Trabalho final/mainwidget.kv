#:kivy 1.11.1
<MainWidget>:
	orientation: 'vertical'
	canvas:
		Color:
			rgb: 0.5,0.5,0.5
		Rectangle:
			size: self.size
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1,0.1)
		spacing: 10
		Label:
			text: 'Seleção e Classificação de Objetos'
			size_hint_x: None
			width: 300
		BoxLayout:
			orientation: 'vertical'
			size_hint_x: None
			width: 400
			Label:
				text: 'Configurações'
			BoxLayout:
				orientation: 'horizontal'
				Button:
					text: "Endereço "
					on_release: root._modbusPopup.open() #associa o botao MODBUS
				Button:
					text: "Ajuste de Tempo"
					on_release: root._scanPopup.open()

		Image:
			id: img_con
			size_hint_x: None
			width: 80
			source: 'imgs/desconectado.png'
			pos_hint: {'top':1, 'right':1}
	FloatLayout:
		canvas:
			Color:
				rgb: 1,1,1
			Rectangle:
				size: self.size
		Image:
			source: 'imgs/Esteira.png'
		Button:
			size_hint: (None, None)
			size: (0.75*72,0.75*68)
			background_normal: 'imgs/graph_icon.jpg'
			background_down: 'imgs/graph_icon.jpg'
			pos_hint: {'x': 0.902, 'y': 0.12}
			on_release:
			#	root._graph.open()
